#!/bin/bash

set -euo pipefail

if [[ $# < 1 ]]; then
    echo "usage: testARES6 TOP_DIR"
    exit 1
fi

TOP_DIR=$1
shift

if [[ ! -d $TOP_DIR ]]; then
    echo "Bad dir: $TOP_DIR"
    exit 1
fi

cd $TOP_DIR

MOZCONFIG=mozconfig-opt JS_GC_PROFILE_NURSERY=0 JSGC_DISABLE_POISONING=1 ./mach talos-test -a ARES6 2>&1
